/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@ngx-addons/omni-auth-cognito": [
        "./dist/omni-auth-cognito",
        "./projects/omni-auth-cognito/src/public-api.ts"
      ],
      "@ngx-addons/omni-auth-core": [
        "./dist/omni-auth-core",
        "./projects/omni-auth-core/src/public-api.ts"
      ],
      "@ngx-addons/omni-auth-ui-material": [
        "./dist/omni-auth-ui-material",
        "./projects/omni-auth-ui-material/src/public-api.ts"
      ],
      "@ng-doc/generated": [
        "./ng-doc/docs/index.ts"
      ],
      "@ng-doc/generated/*": [
        "./ng-doc/docs/*"
      ]
    },
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve"
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./projects/omni-auth-core/tsconfig.lib.json"
    },
    {
      "path": "./projects/omni-auth-core/tsconfig.spec.json"
    },
    {
      "path": "./projects/omni-auth-ui-material/tsconfig.lib.json"
    },
    {
      "path": "./projects/omni-auth-ui-material/tsconfig.spec.json"
    },
    {
      "path": "./projects/omni-auth-cognito/tsconfig.lib.json"
    },
    {
      "path": "./projects/omni-auth-cognito/tsconfig.spec.json"
    },
    {
      "path": "./projects/demo/tsconfig.app.json"
    },
    {
      "path": "./projects/demo/tsconfig.spec.json"
    },
    {
      "path": "./projects/docs/tsconfig.app.json"
    },
    {
      "path": "./projects/docs/tsconfig.spec.json"
    }
  ]
}
